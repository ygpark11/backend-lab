# Stage 1: Build (Node.js 환경)
FROM node:22-alpine AS builder
WORKDIR /app

# 캐싱을 위해 의존성 파일 먼저 복사
COPY package.json package-lock.json ./
RUN npm ci --legacy-peer-deps

# 빌드 시점에 변수 받아오기
ARG VITE_FIREBASE_API_KEY
ARG VITE_FIREBASE_AUTH_DOMAIN
ARG VITE_FIREBASE_PROJECT_ID
ARG VITE_FIREBASE_STORAGE_BUCKET
ARG VITE_FIREBASE_MESSAGING_SENDER_ID
ARG VITE_FIREBASE_APP_ID
ARG VITE_FIREBASE_MEASUREMENT_ID
ARG VITE_FIREBASE_VAPID_KEY
ARG VITE_GA_MEASUREMENT_ID

ARG VITE_BANK_NAME
ARG VITE_BANK_ACCOUNT
ARG VITE_BANK_HOLDER

# 환경변수로 설정 (Vite가 읽을 수 있게)
ENV VITE_FIREBASE_API_KEY=$VITE_FIREBASE_API_KEY
ENV VITE_FIREBASE_AUTH_DOMAIN=$VITE_FIREBASE_AUTH_DOMAIN
ENV VITE_FIREBASE_PROJECT_ID=$VITE_FIREBASE_PROJECT_ID
ENV VITE_FIREBASE_STORAGE_BUCKET=$VITE_FIREBASE_STORAGE_BUCKET
ENV VITE_FIREBASE_MESSAGING_SENDER_ID=$VITE_FIREBASE_MESSAGING_SENDER_ID
ENV VITE_FIREBASE_APP_ID=$VITE_FIREBASE_APP_ID
ENV VITE_FIREBASE_MEASUREMENT_ID=$VITE_FIREBASE_MEASUREMENT_ID
ENV VITE_FIREBASE_VAPID_KEY=$VITE_FIREBASE_VAPID_KEY
ENV VITE_GA_MEASUREMENT_ID=$VITE_GA_MEASUREMENT_ID

ENV VITE_BANK_NAME=$VITE_BANK_NAME
ENV VITE_BANK_ACCOUNT=$VITE_BANK_ACCOUNT
ENV VITE_BANK_HOLDER=$VITE_BANK_HOLDER

# 소스 복사 및 빌드
COPY . .
RUN npm run build

# Stage 2: Serve (Nginx 환경)
FROM nginx:alpine
ENV TZ=Asia/Seoul

RUN apk add --no-cache tzdata && \
    cp /usr/share/zoneinfo/$TZ /etc/localtime && \
    echo $TZ > /etc/timezone

# Nginx 설정 파일 덮어쓰기
COPY nginx.prod.conf /etc/nginx/conf.d/default.conf

# 빌드된 결과물(dist)을 Nginx 웹 루트로 복사
COPY --from=builder /app/dist /usr/share/nginx/html

# 80번 포트 오픈
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]